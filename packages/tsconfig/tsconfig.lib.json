{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist",

		"emitDeclarationOnly": true,
		"jsx": "react-jsx",
		"allowJs": false,
		"checkJs": false,
		"noEmit": false,

		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"exclude": ["dist", "node_modules"]
}
